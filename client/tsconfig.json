{
  "compilerOptions": {
    "jsx": "react-jsx", // Use "react-jsx" for React 17+ or "react" for React 16 and below
    "module": "ESNext",
    "target": "ES2015",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true
  }
}
